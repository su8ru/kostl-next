datasource db {
  provider = "mysql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Train {
  id          String
  day         Day
  operation   Operation    @relation(fields: [operationId], references: [id])
  operationId String
  depTime     String
  typeChanges TypeChange[]

  @@id([id, day])
}

enum Day {
  WEEKDAY
  HOLIDAY
}

model Operation {
  id     String  @id
  trains Train[]
}

model TypeChange {
  id        Int     @id @default(autoincrement())
  stationId String
  typeId    String
  Train     Train   @relation(fields: [trainId, trainDay], references: [id, day])
  trainId   String
  trainDay  Day
}
